<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    
    <% if notice.present? %>
        <div class="alert alert-info" role="alert">
          <strong><%= notice %></strong>
        </div>
    <% end %>
    
    <%= form_for(@tweet) do |f| %>
      <% if @tweet.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger" role="alert">
            <strong><%= @tweet.errors.count %>件のエラーがあります</strong> 
            <ul>
              <% @tweet.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      
      <h1>以下の内容でケイートする</h1>
    
      <%= f.hidden_field :content %>
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8">
          <div class="card card-block">
            <h4 class="card-title"><%= @tweet.content %></h4>
          </div>
        </div>
      </div>
      
      
      <%= f.submit "ケイートを確定する", class: 'btn btn-primary btn-lg tweet-button2' %>
    <% end %>
    
    <%= form_for(@tweet, url: new_tweet_path, method: 'get') do |f| %>
      <%= f.hidden_field :content %>
      <%= f.submit "もどる", name: 'back', class: 'btn btn-sm btn-default back-button' %>
    <% end %>

  
  </div>
</div>

